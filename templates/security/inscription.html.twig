{% extends 'template.twig' %}


{% block stylesheet %}
{% endblock %}


{% block content %}
    <div align="center">
        <div class="container">
            <div class="card card-container" style="max-width: 350px; padding: 40px 40px;">
                <h1>Inscription</h1>
                <br /><br />
                {{ form_start(form) }}
                {#<form method="POST">#}
                    <!-- pseudo -->
                    <div class="form-group">
                        {{ form_row(form.identifiant) }}
                    </div>
                    <!-- mail -->
                    <div class="form-group">
                        {{ form_row(form.email.first) }}
                    </div>
                    <!-- confirmation mail (combiné avec mail)-->
                    <div class="form-group">
                        {{ form_row(form.email.second) }}
                    </div>
                    <!-- mdp -->
                    <div class="form-group">
                        {{ form_row(form.motDePasse.first) }}
                    </div>
                    <!-- confirmation mdp -->
                    <div class="form-group">
                        {{ form_row(form.motDePasse.second) }}
                    </div>
                    <!-- Nom -->
                    <div class="form-group">
                        {{ form_row(form.nom) }}
                    </div>
                    <!-- Prénom -->
                    <div class="form-group">
                        {{ form_row(form.prenom) }}
                    </div>
                    <!-- Téléphone -->
                    <div class="form-group">
                        {{ form_row(form.telephone) }}
                    </div>

                    <div class="form-group">
                        {{ form_row(form.save) }}
                    </div>
                {#//</form>#}
                {{ form_end(form) }}
                <font color="red"></font>
            </div>
        </div>
    </div>
{% endblock %}


{% block javascript %}
{% endblock %}